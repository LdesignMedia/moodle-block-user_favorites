<ol id="block_user_favorites-items" class="list">
    {{#data}}
        <li data-hash="{{hash}}">
            <div class="fa-control">
                <i class="fa fa-edit" title="{{# str}} btn:edit, block_user_favorites {{/ str}}"></i>
                <i class="fa fa-remove" title="{{# str}} btn:remove, block_user_favorites {{/ str}}"></i>
            </div>
            <a class="{{class}}" href="{{url}}">{{name}}</a>
        </li>
    {{/data}}
</ol>
<div class="block_user_favorites-control">
    {{^hascurrenturl}}
        <span class="btn btn-default" id="block_user_favorites_set">
            {{# str}} btn:add, block_user_favorites {{/ str}}
        </span>
    {{/hascurrenturl}}
    {{#hascurrenturl}}
        <span class="btn btn-default" id="block_user_favorites_delete">
            {{# str}} btn:delete, block_user_favorites {{/ str}}
        </span>
    {{/hascurrenturl}}
</div>
